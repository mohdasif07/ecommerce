<h1>All Products</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td>
        <% if @cart.present? %>
          <%= button_to 'Add to Cart', add_to_cart_cart_path(cart_id: @cart.id, product_id: product.id, quantity: 1), method: :post %>
        <% else %>
          <p>Your cart is empty. Please create a cart.</p>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Add Product", new_product_path%>